<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Red.CookieSessions.LiteDBStore</Title>
        <Authors>Malte Rosenbjerg</Authors>
        <Description>A LiteDB session store for Red.CookieSessions, to persists sessions</Description>
        <Copyright>Copyright © Rosenbjerg 2019</Copyright>
        <PackageProjectUrl>https://github.com/rosenbjerg/Red.CookieSessions</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/rosenbjerg/Red.CookieSessions/blob/master/LICENSE.md</PackageLicenseUrl>
        <PackageIconUrl>https://rosenbjerg.dk/red/logo.png</PackageIconUrl>
        <RepositoryUrl>https://github.com/rosenbjerg/Red.CookieSessions</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageTags>red redhttp redhttpserver cookiesession session rhttp rhttpserver litedb session store</PackageTags>
        <PackageReleaseNotes>First release</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="LiteDB" Version="4.1.4" />
      <PackageReference Include="Red.CookieSessions" Version="3.0.1" />
    </ItemGroup>

</Project>
